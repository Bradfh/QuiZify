<!-- CONTAINER FOR GAME SCORE AND LIST OF SONGS PLAYED -->
<div class="container" style="margin-top: 80px;">
  <table class="table" id="results-table">
    <tbody>
      {{#each songs as |song|}}
      <tr id="song-results">
        <th scope="col" id="add-song" style="width: 22%">➕</th>
        <td scope="col" style="width: 56%">{{song.title}} by {{artistName.name}}</td>
        <td scope="col" class="play-icon" id="play-song" style="width: 22%">▶︎</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Play Again Button -->
<div id="play-again-btn">
  <form action="/play-again" method="POST">
    <button class="btn btn-secondary" type="submit" style="width: 400px; height: 50px;">Play Again</button>
  </form>
</div>